<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

    android:background="@drawable/rounded_corner_sheet">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_horizontal_rule_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/gemunulibre_regular"
        android:text="Details of User"
        android:textColor="@color/Slate_navy"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/My_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="16dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title_tv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f0e1"
            android:padding="8dp">


            <TextView
                android:id="@+id/Firstname_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:text="First Name"
                android:textColor="@color/Slate_navy"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/Lastname_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/show_Firstname_ET"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:text="Last Name"
                android:textColor="@color/Slate_navy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Age_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/show_Lastname_ET"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:text="Age"
                android:textColor="@color/Slate_navy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Email_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/show_Age_ET"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:text="Email"
                android:textColor="@color/Slate_navy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_Firstname_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="135dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:hint="Null"
                android:textColor="@color/light_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_Lastname_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_Firstname_ET"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="135dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:hint="Null"
                android:textColor="@color/light_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_Age_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_Lastname_ET"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="135dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/gemunulibre_regular"
                android:hint="Null"
                android:textColor="@color/light_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_Email_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_Age_ET"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="135dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/gemunulibre_regular"

                android:hint="Null"
                android:inputType="textEmailAddress"
                android:textColor="@color/light_blue"
                android:textSize="18sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>